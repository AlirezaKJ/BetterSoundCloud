{
  "name": "bettersoundcloud",
  "version": "0.2.0",
  "description": "BetterSoundCloud PC Client",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "repository": "https://github.com/AlirezaKJ/BetterSoundCloud",
  "downloadpage": "https://github.com/AlirezaKJ/BetterSoundCloud/releases",
  "keywords": [
    "electron",
    "soundcloud",
    "music",
    "audio",
    "web"
  ],
  "build": {
    "appId": "com.bettersoundcloud.app",
    "productName": "BetterSoundCloud",
    "copyright": "Copyright Â© 2022 AlirezaKJ",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "lib\\assets\\bw-icon.ico",
      "target": [
        "zip",
        "dmg"
      ],
      "publish": [
        "github"
      ]
    },
    "win": {
      "publisherName": "AlirezaKJ",
      "icon": "lib\\assets\\bw-icon.ico",
      "publish": [
        "github"
      ],
      "target": [
        "nsis",
        "nsis-web",
        "portable",
        "appx",
        "msi",
        "squirrel"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz"
      ]
    },
    "dmg": {
      "background": "lib\\assets\\bw-icon.ico",
      "icon": "lib\\assets\\bw-icon.ico",
      "title": "Accurate Installer"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "lib\\assets\\bw-icon.ico",
      "installerSidebar": "lib\\assets\\bw-icon.ico",
      "uninstallerSidebar": "lib\\assets\\bw-icon.ico",
      "license": "",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "AlirezaKJ",
        "repo": "bettersoundcloud",
        "vPrefixedTagName": true,
        "private": true,
        "releaseType": "draft"
      }
    ]
  },
  "plugins": {
    "ctxMenu": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/plugins/ctxMenu.js",
    "discordRPC": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/plugins/discordRPC.js",
    "silentAds": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/plugins/silentads.js",
    "reloadOnAds": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/plugins/reloadonads.js",
    "reloadAndPlayOnAds": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/plugins/reloadandplay.js"
  },
  "theme": {
    "darkCloud": "https://raw.githubusercontent.com/AlirezaKJ/BetterSoundCloud/main/themes/darkCloud.css"
  },
  "author": "AlirezaKJ",
  "license": "",
  "devDependencies": {
    "electron": "^22.0.0"
  },
  "dependencies": {
    "discord-rpc": "^4.0.1"
  }
}
